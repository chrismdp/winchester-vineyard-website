#carousel-example-generic.carousel.slide{:'data-ride' => 'carousel', :'data-interval' => '5000', :'data-pause' => 'false'}
  .carousel-inner
    - (0..5).to_a.shuffle.each_with_index do |x, idx|
      .item{:class => idx == 0 ? 'active' : ''}
        %img{:src => "/images/photos/carousel/#{x}.jpg"}
        .carousel-caption
          %img{:src => '/images/logo-400w-white-on-clear.png'}
          %br
          %br
          %p
            Rooted in God.
            %br
            Transforming our community.
            %br
            %span.cornyellow Find out our story.
          %p
            %a{:href => '#wv-welcome'}
              %i.wv-down-arrow.icon-angle-down.icon-2x

