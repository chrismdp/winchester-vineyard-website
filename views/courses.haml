
#wv-home
.navbar-wrapper
  .container
    .navbar.navbar-inverse.navbar-fixed-top{:role => 'navigation'}
      .navbar-header
        %a{:href => '/'}
          %img{:src => '/images/logo-400w-white-on-clear.png', :style=> 'margin-top: 13px; height: 33px'}
      %ul.nav.navbar-nav.navbar-right
        %li
          %a{:href => '/'} &laquo; Back to home

%section.white.wv-students
  .shadow
  .container
    .row
      .col-xs-12
        %h1 welcome
    .row
      .col-xs-8
	%section#wv-news
  	.shadow
  	.container
    	.row
      	.col-xs-12
        	.wv-caption
          	%h1 what's on
          	%br
        	- if @featured_events.size >= 3
          	.row
            	.col-sm-12
              	.row
                	- @featured_events.first(3).each do |event|
                  	= haml :_event, locals: { event: event }
        	- if @featured_events.size >= 6
          	.row
            	.col-sm-12
              	.row
                	- @featured_events[3..5].each do |event|
                  	= haml :_event, locals: { event: event }
        	.row
          	.col-xs-12
            	.calendar
              	:plain
                	<iframe frameborder="0" height="600" src="https://winvin.churchsuite.co.uk/embed/calendar?bgcolor=ffffff" style="border-width:0" width="100%"></iframe>
            	%br
